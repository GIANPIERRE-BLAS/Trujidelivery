<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del Pedido"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:id="@+id/tvNumeroPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pedido #12345678"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:id="@+id/tvHoraPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hora: 12:00"
        android:textColor="@color/gray_dark"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:id="@+id/tvEstadoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Estado: El local recibió tu pedido"
        android:textColor="@color/gray_dark"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:id="@+id/tvNegocioDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Negocio: Restaurante El Sabroso"
        android:textColor="@color/gray_dark"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:id="@+id/tvDireccionDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dirección: Av. Ejército 123, Trujillo"
        android:textColor="@color/gray_dark"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Productos"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01" />

    <LinearLayout
        android:id="@+id/containerProductosDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

</LinearLayout>